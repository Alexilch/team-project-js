<button type="button" class="close-modal-btn" data-action="close-modal">
    <svg class="icon-modal-close" width="10" height="10">
        <use href="./images/symbol-defs.svg#icon-close"></use>
    </svg>
</button>
<div class='modal-card' data-action='{{id}}'>
    <div class='cardItem__image'>
        <img class='image' src='https://image.tmdb.org/t/p/w500{{poster_path}}' alt='{{title}}'
            onerror="this.onerror=null;this.src='https://ik.imagekit.io/tc8jxffbcvf/default-movie-portrait_EmJUj9Tda5wa.jpg?tr=fo-auto,di-';" />
    </div>

    <div class='cardItem__wrapper'>
        <h2 class='cardItem__name'>{{title}}</h2>
        <table>
            <tr>
                <td>
                    <p class='cadrItem__vote cardItem_text'>Vote / Votes</p>
                </td>
                <td>
                    <p><span class='cardItem__vote_average'>{{vote_average}}</span></p>
                </td>
            </tr>
            <tr>
                <td>
                    <p class='cardItem__popularity cardItem_text'>Popularity</p>
                </td>
                <td>
                    <p class='cardItem___data'>{{popularity}}</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p class='cardItem-Title cardItem_text'>Original Title</p>
                </td>
                <td>
                    <p class='cardItem__title_data'>{{original_title}}</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p class='cardItem__genre cardItem_text'>Genre</p>
                </td>
                <td>
                    <p class='cardItem__genre_data'>{{genre}}</p>
                </td>
            </tr>
        </table>
    </div>

    <p class='cardItem__about'>About</p>
    <p class='cardItem__description'>
        {{overview}}
    </p>
    <div class='cardItem__listButton'>
        <ul class='storage'>
            <li class='storage__item'>
                <label class='storage__label'>
                    <input type='checkbox' value='Watched' class='storage__input visually-hidden' />
                    <span class='storage__btn' data-film-id='{{id}}' id='js-watched'>TO WATCHED</span>
                </label>
            </li>
            <li class='storage__item'>
                <label class='storage__label'>
                    <input type='checkbox' value='Queue' class='storage__input visually-hidden' />
                    <span class='storage__btn' data-film-id='{{id}}' id='js-queue'>TO QUEUE</span>
                </label>
            </li>
        </ul>
    </div>
</div>
</div>